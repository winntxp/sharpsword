<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <!--日志记录组件-->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <!--数据库连接字符串-->
  <connectionStrings>
    
    <add name="Global" connectionString="Data Source=192.168.8.32;Initial Catalog=FRXS_O2O;User ID=kaifa;pwd=123456;" providerName="System.Data.SqlClient" />
    <add name="User.0" connectionString="Data Source=192.168.8.32;Initial Catalog=FRXS_O2O;User ID=kaifa;pwd=123456;" providerName="System.Data.SqlClient" />

    <add name="USERORDER.0" connectionString="Data Source=192.168.8.246;Initial Catalog=FRXS_O2O_0;User ID=sa;pwd=123456;" providerName="System.Data.SqlClient" />
    <add name="USERORDER.1" connectionString="Data Source=192.168.8.246;Initial Catalog=FRXS_O2O_1;User ID=sa;pwd=123456;" providerName="System.Data.SqlClient" />
    <add name="USERORDER.2" connectionString="Data Source=192.168.8.246;Initial Catalog=FRXS_O2O_2;User ID=sa;pwd=123456;" providerName="System.Data.SqlClient" />
    <add name="USERORDER.3" connectionString="Data Source=192.168.8.246;Initial Catalog=FRXS_O2O_3;User ID=sa;pwd=123456;" providerName="System.Data.SqlClient" />

    <add name="AreaOrder.0" connectionString="Data Source=192.168.8.32;Initial Catalog=FRXS_O2O;User ID=kaifa;pwd=123456;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <!---log4net日志记录配置2.3.1.ServiceCenter.Api.Core.Logging.Log4Net-->
  <log4net>
    <root>
      <!--ALL,ERROR,FATAL,INFO,WARN,DEBUG-->
      <level value="ALL" />
      <appender-ref ref="FileAppender.WARN" />
      <appender-ref ref="FileAppender.ERR" />
      <appender-ref ref="FileAppender.DEBUG" />
      <appender-ref ref="FileAppender.INFO" />
    </root>
    <appender name="FileAppender.WARN" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <file type="log4net.Util.PatternString" value="App_Data/logs/WARN-%date{yyyy-MM-dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd" />
      <maximumFileSize value="3000kb" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c [%x] %n%m%n" />
        <conversionPattern value="时  间：%d [%t] %n级  别：%-5p %n关联类：%c [%x] %n%m%n %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="WARN" />
        <levelMax value="WARN" />
      </filter>
    </appender>
    <appender name="FileAppender.DEBUG" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <file type="log4net.Util.PatternString" value="App_Data/logs/DEBUG-%date{yyyy-MM-dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd" />
      <maximumFileSize value="3000kb" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c [%x] %n%m%n" />
        <conversionPattern value="时  间：%d [%t] %n级  别：%-5p %n关联类：%c [%x] %n%m%n %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="DEBUG" />
      </filter>
    </appender>
    <appender name="FileAppender.INFO" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <file type="log4net.Util.PatternString" value="App_Data/logs/INFO-%date{yyyy-MM-dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd" />
      <maximumFileSize value="3000kb" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c [%x] %n%m%n" />
        <conversionPattern value="时  间：%d [%t] %n级  别：%-5p %n关联类：%c [%x] %n%m%n %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="INFO" />
      </filter>
    </appender>
    <appender name="FileAppender.ERR" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <file type="log4net.Util.PatternString" value="App_Data/logs/ERR-%date{yyyy-MM-dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy-MM-dd" />
      <maximumFileSize value="3000kb" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c [%x] %n%m%n" />
        <conversionPattern value="异常时间：%d [%t] %n异常级别：%-5p %n异 常 类：%c [%x] %n%m%n %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
  </log4net>
</configuration>